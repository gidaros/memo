<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:mojo-repositories.xml" />
	<import resource="classpath:mojo-services.xml" />
	<import resource="classpath:mojo-web.xml" />

	<bean id="postRepository" parent="repository">
		<property name="entityType" value="memo.dao.common.model.Post" />
	</bean>

	<bean id="postService" class="mojo.dao.core.DataService">
		<property name="repository" ref="postRepository" />
		<property name="validation">
			<bean class="memo.dao.common.validation.PostValidation" />
		</property>
	</bean>

</beans>
